      <center>
        <div class="col-lg-8 col-xl-8" style="margin-top: 100px">
          <% if (message) { %>
            <div class="alert alert-dismissable fade show alert-<%= message.type %>" role="alert">
              <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
              <strong><%= message.message %></strong>
            </div>
            <% } %>
          <div
            class="card text-black"
            style="
              border-radius: 50px;
              border: 2px solid #555555;
              background: linear-gradient(
                to top,
                #fdcbf1 0%,
                #fdcbf1 1%,
                #e6dee9 100%
              );
              background-blend-mode: normal, color-burn;
            "
          >
            <div>
              <u
                ><p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                  Login
                </p></u
              >

              <form action="/login" id="form" method="post">
                <div class="inside">
                  <div class="d-flex flex-row align-items-center mb-6">
                    <i class="bi bi-people-fill" id="i"></i>
                    <select
                      name="role"
                      placeholder="Select Role"
                      class="form-control"
                      required=""
                    >
                    
                      <option value="" disabled selected hidden>
                        Select role
                      </option>
                      <option value="faculty">Faculty</option>
                      <option value="student">Student</option>
                    </select>
                  </div>
                  <br />
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-person-check-fill" id="i"></i>
                    <input
                      type="text"
                      name="username"
                      placeholder="Username"
                      required=""
                      class="form-control"
                    /><br />
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="bi bi-lock-fill" id="i"></i>
                    <input
                      type="password"
                      name="password"
                      placeholder="Password"
                      required=""
                      class="form-control"
                    /><br />
                  </div>
                  <input
                    type="submit"
                    value="Login"
                    class="btn btn-primary mb-2"
                  />
                </div>
              </form>
            </div>

            <div class="mssg bg-danger">
              <span id="check"></span>
            </div>
            <!-- <div id="LangTable">
